<!DOCTYPE html>
<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<% if current_user %>
  <nav class='navbar navbar-inverse navbar-fixed-top'>
    <div class='container'>
      <a class='navbar-brand' href='/projects'>gCamp</a>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <%= link_to(raw("Projects" +("<b class= 'caret'></b>")), projects_path, :class => "dropdown-toggle", :data => {:toggle=>"dropdown"}) %>
          <ul class="dropdown-menu" role="menu">
            <% current_user.memberships.each do |membership| %>
            <li><%= link_to "#{membership.project.name}", project_path(membership) %></li>
            </hr>
            <hr><li><%= link_to "New Project", new_project_path %></li></hr>
            <% end %>
          </ul>
        </li>
        <li><a href="/users">Users</a></li>
      </ul>
      <div class= 'pull-right'>
        <%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user), class: 'navbar-text' %>
        <%= link_to "Sign Out", signout_path, class: 'navbar-text' %>
      </div>
    </div>
  </nav>

  <div class= 'container'>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-#{name}" %>
    <% end %>
  </div>

  <body class= 'body'>
    <div class='container'>
      <%= yield %>
    </div>
  </body>

  <footer class= 'footer'>
    <div class= 'text-center'>
      <%= link_to 'Home', root_path %> |
      <%= link_to 'About', about_path %> |
      <%= link_to 'Terms', terms_path %> |
      <%= link_to 'FAQ', faq_path %>
    </div>
  </footer>
<% end %>

</html>

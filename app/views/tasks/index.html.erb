<div class= 'page-header'>
  <p><h1>Tasks <%= link_to 'New Task', new_task_path(@task), class:"btn btn-info pull-right" %></h1></p>
</div>

<table class= 'table'>
  <thead>
    <tr>
      <th>Description</th>
      <th>Due On</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <% if task.completed %>
        <td><s><%= link_to task.description, task_path(task) %></s></td>
      <% else %>
        <td><%= link_to task.description, task_path(task) %></td>
      <% end %>

      <% if task.due_date %>
        <td><%= task.due_date.strftime( "%m/%d/%Y" ) %></td>
      <% else %>
        <td><%= task.due_date %></td>
      <% end %>


        <td class= "text-right">
          <%= link_to 'Edit', edit_task_path(task), class:"btn btn-info" %>
          <%= link_to 'Delete', task_path(task), method: :delete, class:"btn btn-danger"%>
        </td>
        </tr>
    <% end %>
  </tbody>

</table>

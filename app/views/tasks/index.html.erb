<div class= 'page-header'>
  <p><h1><%= "Tasks for #{@project.name}" %> <%= link_to 'New Task', new_project_task_path(@project), class:"btn btn-info pull-right" %></h1></p>
</div>

<table class= 'table'>
  <thead>
    <tr>
      <th>Description</th>
      <th>Due On</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <% if task.completed %>
        <td><s><%= link_to task.description, project_task_path(@project, task) %></s></td>
      <% else %>
        <td><%= link_to task.description, project_task_path(@project, task) %></td>
      <% end %>

      <% if task.due_date %>
        <td><%= task.due_date.strftime( "%m/%d/%Y" ) %></td>
      <% else %>
        <td><%= task.due_date %></td>
      <% end %>


        <td class= "text-right">
          <%= link_to 'Edit', edit_project_task_path(@project, task), class:"btn btn-info" %>
          <%= link_to 'Delete', project_task_path(@project, task), method: :delete, class:"btn btn-danger"%>
        </td>
        </tr>
    <% end %>
  </tbody>

</table>

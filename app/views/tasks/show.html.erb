<div class= 'page-header'>
  <h1>
    <% if @task.completed %>
      <s><%= @task.description %></s>
    <% else %>
      <%= @task.description %>
    <% end %>
    <%= link_to 'Edit', edit_project_task_path(@project, @task), class:"btn btn-info pull-right" %>
  </h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to 'Projects', projects_path %></a></li>
  <li><%= link_to "#{@project.name}", project_path(@project) %></a></li>
  <li><%= link_to 'Task', project_tasks_path %></a></li>
  <li class="active"><%= @task.description %></li>
</ol>

<p>
  <%if @task.due_date %>
  <strong>Due date:</strong>
  <%= @task.due_date.strftime( "%m/%d/%Y" ) %>
  <% end %>
</p>

<p><h3>Comments</h3></p>
  <% @task.comments.each do |comment| %>
    <p>
      <div class= "row">
        <div class= "col-md-3">
          <%= link_to comment.user.full_name, user_path(comment.user) %>
        </div>
        <div class= "offset-col-md-3 col-md-9">
          <%= comment.content %>
        </div>
      </div>
      <div class= "text-muted">
        <%= time_ago_in_words(comment.created_at) %> ago
      </div>
    </p>
  <% end %>
<div class= "row">
<div class= "offset-col-md-3">
  <%= form_for [@task, @comment], html: {class: "form-horizontal"} do |f| %>

    <%= f.text_area :content, class: "form-control" %>
    <%= f.submit "New Comment", class: "btn btn-primary" %>
  <%end%>
</div>
